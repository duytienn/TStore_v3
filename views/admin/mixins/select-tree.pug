mixin select-tree(items, selected = "")
  each item in items
    - const prefix = "--".repeat(item.level || 0);
    option(
      value=item.id
      selected=(item.id == selected)
      data-code=item.full_code || ""
    ) #{prefix} #{item.title} [#{item.full_code || item.code || ""}]
    if(item.children && item.children.length > 0)
      +select-tree(item.children, selected)